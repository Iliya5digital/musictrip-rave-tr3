<div class="short-item item js-item" 
data-track="{theme}/images/demo.mp3" data-title="{title}" data-artist="Исполнитель" data-img="{image-1}"
>
	<div class="short-item__inner d-flex js-flex-start ai-center">
		<a class="short-item__description item__description stretch-free-width d-flex" href="{full-link}">
			<div class="item__title ws-nowrap">{title}</div>
			<div class="item__subtitle ws-nowrap">Доп поле</div>
			<div class="item__meta ws-nowrap">04:36</div>
		</a>
		<div class="short-item__img img-fit-cover order-first animated-element">
			<img src="{image-1}" alt="{title}">
		</div>
		<div class="item__btn d-flex jc-center ai-center animated-element js-play"><span class="fas fa-play"></span></div>
	</div>
</div>